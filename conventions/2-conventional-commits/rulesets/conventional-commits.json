{
  "name": "Conventional Commits",
  "target": "branch",
  "source_type": "Repository",
  "enforcement": "active",
  "conditions": {
    "ref_name": {
      "exclude": [],
      "include": [
        "~ALL"
      ]
    }
  },
  "rules": [
    {
      "type": "commit_message_pattern",
      "parameters": {
        "name": "Conventional Commits v1 format",
        "negate": false,
        "pattern": "^(build|chore|ci|docs|feat|fix|perf|refactor|revert|style|test){1}(\\([\\w\\-\\.]+\\))?(!)?: ([\\w ])+([\\s\\S]*)",
        "operator": "regex"
      }
    }
  ],
  "bypass_actors": []
}
